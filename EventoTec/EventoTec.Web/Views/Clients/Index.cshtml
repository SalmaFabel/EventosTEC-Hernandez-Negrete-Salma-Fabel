@model IEnumerable<EventoTec.Web.Models.Entities.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p class="">
    <a asp-action="Create" class="btn btn-primary btn-sm">Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.User.FullName)</th>
            <th>
                Phone
            </th>
            <th> Eventos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
            <td>
                @Html.DisplayFor(modelItem => item.User.PhoneNumber)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Events.Count)</td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning m-1">Editar</a>
                }

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info m-1">Detalle</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger m-1">Eliminar</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>